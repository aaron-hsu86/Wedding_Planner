<div class="d-flex justify-content-between ps-3 pe-3 align-items-center">
    <div>
        <h1>Welcome @Context.Session.GetString("UserName")!</h1>
    </div>
    <div class="d-flex justify-content-center gap-3">
        @if(ViewData["Title"] == "Dashboard")
        {
            <p>Home</p>
        }else
        {
            <a asp-controller="Wedding" asp-action="Index">Home</a>
        }
        |
        @if(ViewData["Title"] == "Wedding Planner")
        {
            <p>Plan a Wedding</p>
        }else
        {
            <a asp-controller="Wedding" asp-action="New">Plan a Wedding</a>
        }
        |
        <a asp-controller="Home" asp-action="Logout">Logout</a>
    </div>
</div>
<hr>