@model User
<form asp-controller="Home" asp-action="Register" method="post">
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text">
        </div>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text">
        </div>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="text">
        </div>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password">
        </div>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password">
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Register">
</form>